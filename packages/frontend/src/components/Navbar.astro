---
import Logo from "@/../public/favicon.svg";
import { slide } from "astro:transitions";
import { decodeJwt } from "jose/jwt/decode";
import LogoutButton from "./Auth/LogoutButton.svelte";

const links: {
	name: string;
	url: string;
	icon: string;
}[] = [
	{
		name: "Inicio",
		url: "/dashboard",
		icon: "🏠",
	},
	{
		name: "Ventas",
		url: "/dashboard/sales",
		icon: "💸",
	},
	{
		name: "Productos",
		url: "/dashboard/products",
		icon: "📦",
	},
	{
		name: "Categorias",
		url: "/dashboard/categories",
		icon: "📂",
	},
	{
		name: "Proveedores",
		url: "/dashboard/providers",
		icon: "👨‍🌾",
	},
	{
		name: "Insumos",
		url: "/dashboard/supplies",
		icon: "🧾",
	},
	// {
	// 	name: "Usuarios",
	// 	url: "/dashboard/users",
	// 	icon: "👨‍💼",
	// },
];
interface Props {
	actual:
		| "Inicio"
		| "Ventas"
		| "Productos"
		| "Proveedores"
		| "Insumos"
		| "Categorias"
		| "Usuarios";
}
const { actual } = Astro.props;

const isAdmin = decodeJwt(Astro.cookies.get("token")!.value).role === "ADMIN";
---

<nav transition:name="nav" transition:animate="none">
	<LogoutButton client:load />

	<div class="wrapper">
		<a href="/dashboard">
			<Logo />
			<h1>Naturale POS</h1>
		</a>
	</div>

	<ul>
		{
			links.map((link) => (
				<li
					transition:name={actual === link.name ? "nav-link-active" : "none"}
					class={actual === link.name ? "active" : ""}
					transition:animate={slide({ duration: 300 })}
				>
					<a href={link.url}>
						{link.icon} {link.name}
					</a>
				</li>
			))
		}
		{
			isAdmin && (
				<li
					transition:name={actual === "Usuarios" ? "nav-link-active" : "none"}
					class={actual === "Usuarios" ? "active" : ""}
					transition:animate={slide({ duration: 300 })}
				>
					<a href="/dashboard/users">👨‍💼 Usuarios</a>
				</li>
			)
		}
	</ul>
</nav>

<style>
	nav {
		display: flex;
		flex-wrap: wrap;
		justify-content: space-between;
		align-items: center;
		padding: 1rem;
		gap: 1rem;
		background-color: var(--accent-color);
		border-radius: var(--border-radius);
		margin-bottom: 1rem;
	}

	.wrapper {
		flex: 1;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	ul {
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		justify-content: center;
	}

	li {
		padding-inline: 0.5rem;
	}

	a[href="/dashboard"] {
		display: flex;
		align-items: center;
		text-decoration: none;
		color: var(--text-color);
		justify-content: center;

		& :global(svg) {
			width: 3rem;
		}
	}

	li.active {
		color: var(--accent-color);
		background-color: var(--text-color);
		border-radius: var(--border-radius);
		padding: 0.5rem;

		a {
			color: inherit;
		}
	}
</style>
