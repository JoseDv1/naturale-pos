---
import Navbar from "@/components/Navbar.astro";
import Layout from "@/layouts/Layout.astro";
import ProvidersList from "@/components/Providers/ProvidersList.svelte";
import ProvidersHeader from "@/components/Providers/ProvidersHeader.svelte";

// Authenticated routes
const token = Astro.cookies.get("token");
if (!token) {
	return Astro.redirect("/login");
}
---

<Layout title="Proveedores">
	<Navbar actual="Proveedores" />
	<ProvidersHeader client:load />
	<ProvidersList client:load />
</Layout>
