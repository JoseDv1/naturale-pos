---
import Layout from "@/layouts/Layout.astro";
import logo from "@/../public/logo.svg?raw";
---

<Layout title="Inicio">
	<main>
		<Fragment set:html={logo} />
		<a href="/login" class="btn">Iniciar Sesion</a>
	</main>
</Layout>

<style>
	main {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		max-height: 100dvh;
		font-size: 2rem;
		padding: 4rem;
	}
</style>
